<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CensusGoods" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/prussianblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cornflowerblue</item>
        <item name="colorSecondaryVariant">@color/oonblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EntryButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/cornflowerblue</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CensusGoods.Button.Rounded</item>
    </style>
    <style name="ShapeAppearanceOverlay.CensusGoods.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50sp</item>
        <item name="cornerRadius">45sp</item>
    </style>
    <style name="NavigButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/cornflowerblue</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="AutorizTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/cornflowerblue</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="MainTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>